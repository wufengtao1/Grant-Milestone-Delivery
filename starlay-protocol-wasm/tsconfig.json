{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "build",
    "moduleResolution": "node",
    "importHelpers": true,
    "skipLibCheck": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["tests/**/*.ts", "scripts/**/**/*.ts", "typechain/**/*.ts"],
  "exclude": ["node_modules/"]
}
